# ==========================
# Configuration IA
# ==========================
AI_API_MODE=lmstudio           # Options: 'openai' | 'lmstudio' | 'ollama'
AI_TIMEOUT=60                  # Délai IA (s). Sert aussi de timeout pour les requêtes HA (état + image)
AI_STRICT_OUTPUT=false         # true/false: Forcer une sortie JSON stricte (response_format), fallback auto si non supporté
LOG_LEVEL=INFO                 # Niveau de logs CLI: DEBUG | INFO | WARNING | ERROR

# ==========================
# OpenAI
# ==========================
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_MODEL=gpt-4o

# ==========================
# LM Studio (compatible API OpenAI)
# ==========================
LMSTUDIO_URL=http://127.0.0.1:11434/v1
LMSTUDIO_MODEL=qwen/qwen2.5-vl-7b

# ==========================
# Ollama (compatible API OpenAI)
# ==========================
OLLAMA_URL=http://127.0.0.1:11434/v1
OLLAMA_MODEL=llava:latest

# ==========================
# MQTT (pour Home Assistant)
# ==========================
MQTT_BROKER=localhost
MQTT_PORT=1883
MQTT_USERNAME=homeassistant
MQTT_PASSWORD=votre_mot_de_passe

# ==========================
# Home Assistant (infos device)
# ==========================
HA_DEVICE_NAME=IAction
HA_DEVICE_ID=iaction_camera_ai

# ==========================
# Mode de capture
# ==========================
CAPTURE_MODE=rtsp              # 'rtsp' (flux vidéo) ou 'ha_polling' (image via API Home Assistant)

# ==========================
# RTSP (si CAPTURE_MODE=rtsp)
# ==========================
DEFAULT_RTSP_URL=
RTSP_USERNAME=
RTSP_PASSWORD=

# ==========================
# HA Polling (si CAPTURE_MODE=ha_polling)
# ==========================
HA_BASE_URL=                   # URL de base de Home Assistant (ex: http://homeassistant.local:8123)
HA_TOKEN=                      # Token d'accès long (Profil > Paramètres > Jetons d'accès long)
HA_ENTITY_ID=                  # ex: camera.entree
HA_IMAGE_ATTR=entity_picture   # Attribut image (par défaut)
HA_POLL_INTERVAL=1.0           # Intervalle de polling (s)